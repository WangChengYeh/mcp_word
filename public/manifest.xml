<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:type="TaskPaneApp">
  <Id>mcp-word-addin-2025-v1</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>MCP Word Add-in</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="MCP Word Add-in"/>
  <Description DefaultValue="Model Context Protocol (MCP) server integration for AI-driven document editing workflows in Microsoft Word."/>
  <IconUrl DefaultValue="http://localhost:3000/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="http://localhost:3000/icon-64.png"/>
  <SupportUrl DefaultValue="http://localhost:3000"/>
  <Hosts>
    <Host Name="Document"/>
  </Hosts>
  <Requirements>
    <Sets>
      <Set Name="WordApi" MinVersion="1.3"/>
    </Sets>
  </Requirements>
  <DefaultSettings>
    <SourceLocation DefaultValue="http://localhost:3000/taskpane.html"/>
  </DefaultSettings>
  <Permissions>ReadWriteDocument</Permissions>
  <AppDomains>
    <AppDomain>http://localhost:3000</AppDomain>
  </AppDomains>
</OfficeApp>
